<h5 class="text-light fw-bold text-center">Add Bringers</h5>
<form action="{{ url_for('bringers.index') }}" method="post">
    <div class="w-100 d-flex flex-column">
        <label for="username-bringers" class="text-light w-sm-50 d-none">Username</label>
        <div class="w-sm-50 d-flex align-items-center gap-3 mx-auto">
            <input type="text" required class="form-control" id="username-bringers" name="username-bringers"
                placeholder="john.doe#1" />
            <button type="submit" class="btn btn-primary fw-bold d-flex py-2">
                <i class="bi bi-search icon m-auto"></i>
            </button>
        </div>
    </div>
</form>