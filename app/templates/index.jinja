{% extends "layout.jinja" %}

{% block header %}
{% include "header/header.jinja" %}
{% endblock %}

{% block main %}
<main>
    <section class="text-light d-flex flex-column align-items-center">
        <h2 class="mt-3">Welcome on BringIt!</h2>
        {% if g.user["id"] %}
        <p class="mt-3">Go check <a href="{{ url_for('lists.index') }}">your lists</a> or <a
                href="{{ url_for('bringers.index') }}">your bringers</a>!</p>
        {% else %}
        <p class="mt-3"><a href="{{ url_for('auth.signup') }}">Create an account</a> or <a
                href="{{ url_for('auth.signin') }}">signin</a> to start creating new lists!</p>
        {% endif %}
    </section>

</main>
{% endblock %}